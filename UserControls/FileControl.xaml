<UserControl x:Class="DicomViewer.UserControls.FileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DicomViewer.UserControls" xmlns:dicomviewer="clr-namespace:DicomViewer" d:DataContext="{d:DesignInstance Type=dicomviewer:ViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="400">
    <Grid Background="Aqua">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <ItemsControl Name="SlicesField" ItemsSource="{Binding ListSlices}" Grid.Row="0">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="White">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="40"/>
                            </Grid.RowDefinitions>
                            
                            <Image Source="{Binding Image}"  Margin="2" Grid.Row="0"/>

                            <TextBlock Background="AliceBlue" Grid.Row="1">
                                <TextBlock.Text>
                                    Slice
                                </TextBlock.Text>
                            </TextBlock>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>

        <ListBox Name="LoadedDicomsField" ItemsSource="{Binding LoadedDicomViews}" SelectedItem="{Binding SelectedDicom, Mode=TwoWay}"
                 Grid.Row="1" Background="BlueViolet">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Background="AliceBlue">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} {1}">
                                <Binding Path="FileName"/>
                                <Binding Path="FileIndex"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
    </Grid>
</UserControl>
